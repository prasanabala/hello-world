pipeline {
  agent any
  tools {
    maven 'maven-3.6.3' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat_credential', path: '', url: 'http://127.0.0.1:9000')], contextPath: '/pipeline', onFailure: false, war: 'webapp/target/hello-world.war' 
        }
      }
    }
  }
}
